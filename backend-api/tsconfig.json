{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": false,
    "outDir": "./build",
    "removeComments": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  },
  "include": ["src/**/*", "typings/**/*"],
  "exclude": ["node_modules"]
}
