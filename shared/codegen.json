{
  "generates": {
    "../backend-api/src/__generated__.ts": {
      "schema": "../backend-api/schema.graphql",
      "plugins": ["typescript", "typescript-resolvers"],
      "config": {
        "contextType": "./types#IApolloContext"
      }
    },
    "../frontend-web/src/__generated__.ts": {
      "schema": "../backend-api/schema.graphql",
      "plugins": [
        "typescript",
        "typescript-operations",
        "typescript-react-apollo"
      ],
      "config": {
        "reactApolloVersion": 3,
        "withComponent": false,
        "withHOC": false,
        "withHooks": false
      },
      "documents": ["../frontend-web/src/graphql/client.documents.graphql"]
    },
    "../frontend-web/src/__generated-state__.ts": {
      "schema": ["../frontend-web/src/graphql/state.graphql"],
      "plugins": [
        "typescript",
        "typescript-operations",
        "typescript-react-apollo"
      ],
      "config": {
        "reactApolloVersion": 3,
        "withComponent": false,
        "withHOC": false,
        "withHooks": false
      },
      "documents": ["../frontend-web/src/graphql/state.documents.graphql"]
    }
  },
  "config": {
    "avoidOptionals": true,
    "skipTypename": true,
    "namingConvention": {
      "typeNames": "pascal-case#pascalCase"
    },
    "scalars": {
      "DateTime": "string"
    }
  },
  "hooks": {
    "afterOneFileWrite": "prettier --write"
  }
}
